<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/indexTitle"
            android:id="@+id/indexTitle" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:textStyle="bold" android:textSize="25dp"/>

    <Spinner
            android:id="@+id/indexCategoriesSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout" android:layout_below="@+id/indexTitle"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="643dp"
            android:layout_alignParentLeft="true" android:layout_marginTop="83dp" android:layout_alignParentTop="true"
            android:id="@+id/linearLayout">
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/projectsList" android:choiceMode="singleChoice"/>
    </LinearLayout>
</RelativeLayout>